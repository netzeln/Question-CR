<div class="container question">
  <form>
    <div class="form-group">
      <label for="theQuestion">What do you Want to know?</label>
      {{input class="form-control" type="text" value=theQuestion id="theQuestion"}}
    </div>
    <div class="form-group">
      <label  for="asker">Who Are You?</label>
      {{input class="form-control" type="text" value=asker id="asker"}}
    </div>
    <div class="form-group">
      <label  for="date" >When Are You Asking?</label>
      {{input class="form-control" type="date" value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="inContext">Why are you Asking?</label>
      {{input class="form-control" value=inContext id="inContext"}}
    </div>
    <button class="btn btn-lg btn-info" {{action 'askQuestion' question}}>ASK THE INTERNET</button>
  </form>
</div>
